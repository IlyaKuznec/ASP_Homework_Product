@model Register
<form method="post">
	<div >
		<h3 class="text-center">Регистрация</h3>

	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

	<div class="row text-white my-2">
		<div class="col-6">
			<label asp-for="UserName">Имя пользователя</label><br />
			<input class="form-control" asp-for="UserName" />
			<span asp-validation-for="UserName" />
		</div>
	</div>

	<div class="row text-white my-2">
		<div class="col-6">
			<label asp-for="Password">Пароль</label><br />
			<input class="form-control" asp-for="Password" />
			<span asp-validation-for="Password" />
		</div>
	</div>
	<div class="row text-white my-2">
		<div class="col-6">
			<label asp-for="ConfirmPassword">Подтвердить пароль</label><br />
			<input class="form-control" asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword" />
		</div>
	</div>	

	<div>
		<button class="btn btn-info my-5" type="submit" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
	</div>
</form>