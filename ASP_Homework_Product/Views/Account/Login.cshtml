@model Login
<form method="post">
	<div>
		<h3 class="text-center">Вход</h3>

	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

	<div class="row text-white my-2">		
		<div class="col-6">
			<label asp-for="UserName">Имя пользователя</label><br />
			<input class="form-control" asp-for="UserName" />
			<span asp-validation-for="UserName" />
		</div>
	</div>

	<div class="row text-white my-2">
		<div class="col-6">
			<label asp-for="Password">Пароль</label><br />
			<input class="form-control" asp-for="Password" />
			<span asp-validation-for="Password" />
		</div>
	</div>

	<div class="row text-white my-2">
		<div class="col-6">
			<label>Запомнить меня</label>
			<input class="form-control" type="checkbox" name="rememberMe" />
			<a class="form-control my-5" style="color: white; background-color: gray"  href="/account/register">Регистрация</a>
		</div>
	</div>

	<div>
		<button class="btn btn-info my-5" type="submit" asp-controller="Account" asp-action="Login">Войти</button>
	</div>
</form>