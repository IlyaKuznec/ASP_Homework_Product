@using Library.Models
@model List<Role>
<div class="row">

    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>

    <div class="col-9">
        <div class="row">
            <h3 class="text-center">Список ролей</h3>
        </div>        

        <div class="row">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th></th>                         
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td><a style="color: white" href="/admin/removeRole?roleName=@Model[i].Name">Удалить</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-info my-0" href="/admin/addRole">Добавить новую роль</a>
        </div>

    </div>
</div>