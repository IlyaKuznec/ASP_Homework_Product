@model List<Order>
<div class="row">

    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>

    <div class="col-9">
        <div class="row">
            <h3>Список заказов</h3>
        </div>

        <div class="row">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>№</th>                        
                        <th>Статус</th>
                        <th>Дата</th>
                        <th>Время</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>                            
                            <td>@Model[i].Status</td>
                            <td>@Model[i].CreateDateTime.ToString("d")</td>
                            <td>@Model[i].CreateDateTime.ToString("t")</td>
                            <td><a style="color: white" href="/admin/orderDetails?orderId=@Model[i].Id">Подробнее</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>