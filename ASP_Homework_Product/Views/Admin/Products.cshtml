@model List<Product>
<div class="row"> 
    
    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>

    <div class="col-9">
        <div class="row">
            <h3>Список продуктов</h3>
        </div>        

        <div class="row">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th>Автор</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i=0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Model[i].Title</td>
                            <td>@Model[i].Author</td>
                            <td><a style="color: white" href="/admin/editProduct?productId=@Model[i].Id">Редактировать</a></td>
                            <td><a style="color: white" href="/admin/removeProduct?productId=@Model[i].Id">Удалить</a></td>                            
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-info my-5" href="/admin/addProduct">Добавить новый продукт</a>
        </div>
        
    </div>  
</div>