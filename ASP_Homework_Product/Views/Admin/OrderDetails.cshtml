@model Order

<form method="post">
	<div class="row">
		<div class="col-6">
			<table class="table">
				<tr>
					<td>Дата и время</td>
					<td>@Model.CreateDateTime.ToString("g")</td>
				</tr>
				<tr>
					<td>Адрес доставки</td>
					<td>@Model.User.Address</td>
				</tr>
				<tr>
					<td>Заказчик</td>
					<td>@Model.User.Name</td>
				</tr>
				<tr>
					<td>Телефон</td>
					<td>@Model.User.Phone</td>
				</tr>				
				<tr>
					<td>Статус заказа</td>
					<td>
						<select asp-for="@Model.Status"
								asp-items="@Html.GetEnumSelectList<OrderStatus>()"
								class="form-control">
						</select>
					</td>
				</tr>
			</table>
		</div>
		<button class="btn btn-outline-success" type="submit" asp-controller="Admin" asp-action="UpdateOrderStatus" asp-route-orderId="@Model.Id">Оформить заказ</button>
	</div>
</form>