@model Product



<form method="post">
	<div>
		<h3>Создание нового продукта</h3>
	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

	<div class="row">
		<div class="col-6">
			<label asp-for="Title"></label><br />
			<input class="form-control" asp-for="Title" />
			<span asp-validation-for="Title" />
		</div>
	</div>

	<div class="row">
		<div class="col-6">
			<label asp-for="Description"></label><br />
			<input class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" />
		</div>
	</div>

	<div class="row">
		<div class="col-6">
			<label asp-for="Author"></label><br />
			<input class="form-control" asp-for="Author" />
			<span asp-validation-for="Author" />
		</div>
	</div>

	<div>
		<button type="submit" asp-controller="Admin" asp-action="AddProduct">Создать</button>
	</div>
</form>